        <%= link_to image_tag('sexy.jpg', :class => 'banner'), question_path(@next_question, 5) %>
        <%= link_to image_tag('traditional.jpg', :class => 'banner'), question_path(@next_question, 6) %>
        <%= link_to image_tag('trendy.jpg', :class => 'banner'), question_path(@next_question, 7) %>
			</div>
		</div>
	</div>
</div>
<div id="footer">
</div>

